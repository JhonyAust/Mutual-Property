<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.SearchActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_search_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"

        android:background="@color/primary_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.example.ecommerce.utils.MSPTextViewBold
            android:id="@+id/ap_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:text="@string/search"
            android:textColor="@color/white"
            android:textSize="@dimen/toolbar_title_text_size"></com.example.ecommerce.utils.MSPTextViewBold>

    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleButtonGroup"
        android:layout_width="151dp"
        android:layout_height="58dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar_search_activity"
        app:singleSelection="true">

        <Button
            android:id="@+id/btnLeft"
            style="@style/ButtonWithIconOnly"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:text="Sell" />

        <Button
            android:id="@+id/btn_right"
            style="@style/ButtonWithIconOnly"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:text="Rent" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <com.example.ecommerce.utils.MSPTextViewBold
        android:id="@+id/textView5"
        android:layout_width="160dp"
        android:layout_height="57dp"
        android:layout_marginTop="74dp"
        android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
        android:gravity="center"
        android:text="Search For"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/toggleButtonGroup"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar_search_activity" />

    <View
        android:id="@+id/vd"
        style="@style/Divider"
        android:layout_width="410dp"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="156dp"
        android:layout_height="38dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:drawableLeft="@drawable/ic_baseline_location_city_24"
        android:text="  City"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vd" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/simpleSpinner"
        android:layout_width="138dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vd" />
    <View
        android:id="@+id/vd2"
        style="@style/Divider"
        android:layout_width="410dp"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/simpleSpinner" />


    <TextView
        android:id="@+id/tv_pr"
        android:layout_width="170dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/ic_baseline_price_check_24"
        android:text=" Price Range"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vd2" />

    <TextView
        android:id="@+id/tv_seekbar"
        android:layout_width="300dp"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="56dp"
        android:gravity="center"
        android:text="0"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pr" />

    <SeekBar
        android:id="@+id/skbar"
        android:layout_width="372dp"
        android:layout_height="55dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="309dp"
        android:max="1000000"
        android:min="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_seekbar">

    </SeekBar>

    <View
        android:id="@+id/vd_price"
        style="@style/Divider"
        android:layout_width="410dp"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skbar" />
    <TextView
        android:id="@+id/tv_keywords"
        android:layout_width="170dp"
        android:layout_height="34dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:text="@string/keywords"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vd_price" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="493dp"
        android:hint="Enter relevant keywords"
        android:layout_marginTop="@dimen/et_text_size"
        app:layout_constraintTop_toBottomOf="@+id/tv_keywords"
        app:layout_constraintStart_toStartOf="parent">

        <com.example.ecommerce.utils.MSPEditText
            android:layout_width="308dp"
            android:layout_height="56dp"
            android:layout_marginLeft="50dp"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/colorPrimaryText"/>
    </com.google.android.material.textfield.TextInputLayout>

    <View
        android:id="@+id/vd_s_key"
        style="@style/Divider"
        android:layout_width="410dp"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_key" />

    <Button
        android:id="@+id/button"
        android:layout_width="375dp"
        android:layout_height="53dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="65dp"
        android:text="Search Now"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vd_s_key"
        app:layout_constraintVertical_bias="0.8" />


</androidx.constraintlayout.widget.ConstraintLayout>