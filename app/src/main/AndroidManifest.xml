<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mutualproperty">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MutualProperty">
        <activity android:name=".view.activities.SearchActivity"
            android:theme="@style/Theme.MutualProperty.NoActionBar"></activity>
        <activity
            android:name=".view.activities.ForgetPasswordActivity"
            android:theme="@style/Theme.MutualProperty.NoActionBar" />
        <activity
            android:name=".view.activities.Login"
            android:theme="@style/Theme.MutualProperty.NoActionBar" />
        <activity
            android:name=".view.activities.Register"
            android:theme="@style/Theme.MutualProperty.NoActionBar" />
        <activity
            android:name=".view.activities.Menu"
            android:label="@string/title_activity_menu"
            android:theme="@style/Theme.MutualProperty.NoActionBar" />
        <activity
            android:name=".view.activities.AddProperties"
            android:label="Add Property"
            android:theme="@style/Theme.MutualProperty.NoActionBar" />
        <activity
            android:name=".view.activities.SplashActivity"
            android:theme="@style/Theme.MutualProperty.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.MainActivity"
            android:label="@string/app_name" />
    </application>

</manifest>